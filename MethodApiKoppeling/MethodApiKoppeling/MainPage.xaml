<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MethodApiKoppeling.MainPage"
             BackgroundColor="LightGray">

    <StackLayout Margin="20">

        <Label Text="Sign In" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,10" />
        <Entry x:Name="usernameEntry" Placeholder="Gebruikersnaam" PlaceholderColor="#8a8787" Margin="0,20,0,0" BackgroundColor="#e8e6e6" TextColor="Black" WidthRequest="300"/>
        <Entry x:Name="passwordEntry" Placeholder="Wachtwoord" PlaceholderColor="#8a8787" IsPassword="True" Margin="0,10,0,0" BackgroundColor="#e8e6e6" WidthRequest="300" TextColor="Black"/>
        <Button Text="Login" BackgroundColor="#009EE2" TextColor="White" Margin="0,20,0,0"  WidthRequest="300" Clicked="LoginButton_Clicked" />


        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="End">
            <Label  Text="Idea-X Almkerk Copyright ©" FontSize="12" TextColor="#808080" Margin="0,0,0,0"  />
            <Label x:Name="responseLabel" Text="" />
            <Label x:Name="resultLabel" Text="Retrieved Value: " />
            <Button Text="Get Drivable Routes" BackgroundColor="#009EE2" TextColor="White" Margin="0,10,0,0" WidthRequest="300" Clicked="GetRoutesButton_Clicked" />
        </StackLayout>

    </StackLayout>
</ContentPage>